generator client {
  provider = "go run github.com/steebchen/prisma-client-go"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id           String  @id @default(uuid())
  name         String
  age          Int
  bio          String?
  interests    String?
  workHistory  String?
  education    String?
  certificates String? @default("[]") // Optional, stored as JSON string
}
