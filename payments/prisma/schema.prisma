generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Payment {
  id              String   @id @default(uuid())  // Unique payment ID
  studentId       String   // Link to Student (from another microservice)
  transactionId   String?  @unique  // External payment provider transaction ID
  amount          Float
  currency        String   // e.g., "USD"
  status          PaymentStatus @default(PENDING)  // PENDING, COMPLETED, REFUNDED
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Receipt {
  id         String   @id @default(uuid())
  paymentId  String   @unique // Links to a payment
  receiptUrl String   // Link to generated receipt
}

enum PaymentStatus {
  PENDING
  COMPLETED
  REFUNDED
}
